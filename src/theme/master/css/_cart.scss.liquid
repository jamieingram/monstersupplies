/*============================================================================
  #Cart Page
==============================================================================*/
.cart-row {
  padding-top: $gutter;
  padding-bottom:12px;

  a {
    color: $colorTextBody;

    &:hover {
      color: $colorPrimary;
    }
  }

  &.indented-row {
    @include at-query ($min, $large) {
      margin-left:18%;
      margin-right:18%;
    }
  }
}

.cart-subtotal {
  margin-bottom: $gutter;
}

.cart-subtotal--price {
  margin: 0 0 0 $gutter/3;
  display: inline;
}

.basket-summary {
  text-align:center;
  padding-bottom:10px;
  margin-bottom:$gutter;

  p {
    display:inline-block;
    margin-right:24px;
  }

  input {
    display:inline-block;
  }
}

.basket-contents {
  padding-top:12px;
  padding-bottom: 24px;
  background-color: $white;

  h5 {
    font-size:em(26px);
    line-height:1.1em;

    &.product-title {
      @include at-query ($max, $small) {
        font-size:em(18px);
      }
    }
  }
}

.product-detail-item {
  .grid-item {
    margin-bottom:0px;
  }
}

.close-button-white {
  display:inline-block;
  width:13px;
  height:17px;
  margin-right:5px;
  background: url('{{ "close-button-white.png" | asset_url }}') bottom left no-repeat;
}

.arrow {
  cursor:pointer;
  display:block;
  width:34px;
  height:15px;
  &.arrow-up {
    background: url('{{ "arrow-up-grey.png" | asset_url }}') bottom center no-repeat;
  }
  &.arrow-down {
    margin-top:40px;
    background: url('{{ "arrow-down-grey.png" | asset_url }}') bottom center no-repeat;
  }
}

.quantity-adjust {
  margin-top:12px;
}

input[type="text"] {
  &.quantity-input {
    margin-top:4px;
  }
}

.product-cost {
  margin-top:32px;
}

.basket-add-curse {
  @include clearfix;

  padding-top:32px;
  padding-bottom:32px;
  margin-bottom:0px;

  h3 {
    font-size:em(26px);
    margin-bottom:6px;
  }

  ul {
    margin-bottom:0px;
  }

  p, li {
    font-size:em(18px);
  }

  p {
    line-height:1.2em;
  }

  border-bottom: 2px solid #bcbebb;

  .curse-options-container {
    background: url('{{ "mos_logo.png" | asset_url }}') center right no-repeat;
    background-position: 98% center;
  }

  .curse-options {
    display:inline-block;

    li {
      margin-bottom:10px;
      text-transform: uppercase;
    }

    li:last-child {
      margin-bottom:0px;
    }
  }

  .product-cost {
    font-size:em(26px);
    line-height:1.1em;
    display:inline-block;
    margin-top:56px;
    @include at-query ($max, $small) {
      margin-top:24px;
    }
  }

  .grid-item {
    margin-bottom:0px;
  }
}