/*============================================================================
  #Cart Page
==============================================================================*/
.cart-row {
  padding-top: $gutter;
  padding-bottom:12px;

  a {
    color: $colorTextBody;

    &:hover {
      color: $colorPrimary;
    }
  }

  &.indented-row {
    @include at-query ($min, $large) {
      margin-left:18%;
      margin-right:18%;
    }
  }

  h5 {
    font-size:em(26px);
    line-height:1.1em;

    &.product-title {
      @include at-query ($max, $small) {
        font-size:em(18px);
      }
    }
  }

  h3 {
    font-size:em(26px);
    margin-bottom:6px;
  }

  ul {
    margin-bottom:0px;
  }

  p, li {
    font-size:em(18px);
    @include at-query($max, $small) {
      font-size:em(16px);
    }
  }

  p {
    padding-right:$gutter;
    line-height:1.2em;
  }
}

.cart-subtotal {
  margin-bottom: $gutter;
}

.cart-subtotal--price {
  margin: 0 0 0 $gutter/3;
  display: inline;
}

.basket-summary {
  text-align:center;
  padding-bottom:10px;
  margin-bottom:$gutter;

  p {
    display:inline-block;
    margin-right:24px;
    @include at-query($max, $small) {
      margin-left:12px;
      margin-right:12px;
    }
  }

  input {
    display:inline-block;
  }
}

.basket-contents {
  padding-top:12px;
  padding-bottom: 24px;
  background-color: $white;
}

.product-detail-item {
  .grid-item {
    margin-bottom:0px;
  }
}

.close-button-white {
  display:inline-block;
  width:13px;
  height:17px;
  margin-right:5px;
  background: url('{{ "close-button-white.png" | asset_url }}') bottom left no-repeat;
}

.arrow {
  cursor:pointer;
  display:block;
  width:34px;
  height:15px;
  &.arrow-up {
    background: url('{{ "arrow-up-grey.png" | asset_url }}') bottom center no-repeat;
  }
  &.arrow-down {
    margin-top:40px;
    background: url('{{ "arrow-down-grey.png" | asset_url }}') bottom center no-repeat;
  }

  @include at-query($max, $small) {
    width:24px;
  }
}

.quantity-adjust {
  margin-top:12px;
}

input[type="text"] {
  &.quantity-input {
    margin-top:4px;
  }
}

.product-cost {
  margin-top:32px;
}

.basket-add-curse {
  @include clearfix;

  padding-top:32px;
  padding-bottom:32px;
  margin-bottom:0px;

  .curse-options-container {
    background: url('{{ "mos_logo.png" | asset_url }}') center right no-repeat;
    background-position: 96% center;
  }

  .curse-options {
    display:inline-block;

    li {
      margin-bottom:10px;
      text-transform: uppercase;
    }

    li:last-child {
      margin-bottom:0px;
    }
  }

  .product-cost, .delivery-cost {
    font-size:em(26px);
    line-height:1.1em;
    display:inline-block;
    margin-top:38px;
    @include at-query ($max, $small) {
      margin-top:24px;
    }
  }

  .grid-item {
    margin-bottom:0px;
  }

  @include at-query($max, $medium) {
    .curse-options-container {
      background-position: 96% bottom;
    }
  }
}

.delivery-cost-amount {

  margin-top:44px;

  h5 {
    display:inline-block;
  }

  @include at-query($max, $medium) {
    margin-top:0px;
  }
}

.delivery-options-holder {
  background: url('{{ "loch_ness.png" | asset_url }}') top right no-repeat;
  background-size: (147px * 0.7) (71px * 0.7);
  background-position: right 30px;
  @include at-query($min, $xlarge) {
    background-size: 147px 71px;
  }

  @include at-query($max, $medium) {
    background-size: 147px 71px;
    background-position: right 0px;
  }

  @include at-query($max, $small) {
    background-position: right 30px;
  }
}

.delivery-options {
  display:inline-block;
  margin-top:42px;
  @include at-query($max, $medium) {
    margin-top:0px;
  }
}

.product-gift-summary {
  background-color: $white;
  padding:$gutter;
  padding-bottom:36px;

  label {
    font-size:em(26px);
    text-transform: uppercase;
    margin-bottom:12px;
  }

  p {
    margin-bottom:($gutter * 2);
  }

  .basket-total {
    @include clearfix;
    width:100%;
    margin-bottom:12px;
  }

  .basket-total-label {
    margin-top:16px;
    float:left;
    display:inline-block;
    font-size:em(26px);
  }

  .basket-total-amount {
    display:inline-block;
    float:right;
    font-size:em(40px);
  }
}

.extra-product {
  padding:($gutter * 0.5);
  background-color:#bababa;

  .cart-row {
    padding-bottom: $gutter;
  }

  a {
    color:#FFF;
  }

  a:hover {
    color:#FFF;
  }

  h4 {
    text-transform: none;
    font-size:em(26px);
    @include at-query ($max, $small) {
      font-size:em(20px);
    }
  }

  .product-title {
    font-size:em(18px);
    margin-bottom:0.3em;
  }

  .product-cost {
    margin-top:0px;
    font-size:em(16px);
    margin-bottom:1em;
  }
}