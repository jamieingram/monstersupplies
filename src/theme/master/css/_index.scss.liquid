.no-bottom-margin {
    margin-bottom:0px;
}

.delivery-promo {
  background-color:$darkGreen;
  text-align: center;
  padding:($gutter * 0.5);

  p {
    text-transform:uppercase;
    color:$white;
    margin:0px;
    font-size:em(22px);

    @include at-query ($max, $small) {
      font-size:em(16px);
    }
  }
}

.about-shop-promo {
  text-align: center;
  background: url('{{ "shop-bg.jpg" | asset_url }}') center center no-repeat;
  padding:5em;

  @include at-query ($max, $small) {
    padding:($gutter / 2);
  }

}

.mos-promo {
  font-size: 1.125em;
  text-align: center;
  background: url('{{ "mos_logo.png" | asset_url }}') top center no-repeat;
  padding-top:5em;

  @include at-query ($max, $small) {
    text-align: left;
    background-position: left;
    background-position-x: ($gutter * 2);
    padding-top:0;
    padding-left: 150px;
  }
}

.panel {
    width:320px;

    @include at-query ($max, $small) {
        width:288px;
    }

    margin: 0 auto;
    padding:$gutter;

    h4 {
        margin-bottom: 0;
    }

    .panel-sub-title {
        text-transform: uppercase;
        margin-bottom:1em;
    }

    p {
        margin-bottom:1em;
    }
}

.panel-black {
    background-color: $black;
    color: #FFF;

    a {
        color: #FFF;
    }

    a:hover,
    a:focus {
        color: $disabledGrey;
    }
}

.map-link {
    background: url('{{ "location-pin.png" | asset_url }}') top left no-repeat;
    background-position: 0 2px;
    padding-left:1.438em;
}

.collection-promo {
    background-color: #FFF;
    a {
        text-decoration: none;
    }

    .collection-text {
        padding:1em;
        min-height: 7.8em;
    }

    .title-small {
        font-family: $headerFontStack;
        font-weight: $headerFontWeight;
        font-size: 1.429em;
        text-transform: uppercase;
        margin-bottom:0.5em;
    }

    img {
        vertical-align: bottom;
    }

    p {
        line-height: 1.4;
        margin: 0;
        padding: 0 10px 0 10px;
    }
}