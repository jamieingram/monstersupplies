.about-carousel {

    .carousel-copy {

        display:table;
        background-color:$black;
        color:$white;
        position: relative;
        width:100%;
        padding-left:10%;
        padding-right:10%;
        padding-top:20px;
        padding-bottom:20px;
        left:0;
        top:0;
        text-align:center;
        height:90px;
        line-height:1.2em;

        span {
            display: table-cell;
            vertical-align: middle;
        }

        p {
            padding-left:30px;
            padding-right:30px;
            margin-bottom:0px;
            font-size:em(18px);
        }

        .arrow-left {
            margin-top:10px;
            float:left;
        }

        .arrow-right {
            margin-top:10px;
            float:right;
        }

        @include at-query ($max, $small) {
            padding-top:10px;
            padding-bottom:10px;
            line-height:1.1em;

            p {
                font-size:em(14px);
            }

            .arrow-left {
                margin-top:24px;
            }

            .arrow-right {
                margin-top:24px;
            }
        }
    }
}

.about-carousel {
    .owl-theme .owl-controls{
        @include at-query ($max, $small) {
            bottom:90px;
        }
    }
}

.volunteer-content-holder {
    margin-top:50px;
    margin-bottom:50px;
    padding-top:($gutter * 2);
    padding-bottom:$gutter;
    margin-left:0px;
    background-color: $white;
    @include clearfix;

    @include at-query($min, $xlarge) {
        padding-top:50px;
        padding-bottom:50px;
        margin-bottom:100px;
    }

    @include at-query($max, $small) {
        margin-top:0px;
    }
}

.volunteer-content {
    padding-top:$gutter;
    padding-left:$gutter;
    padding-right:$gutter;

    @include at-query($min, $xlarge) {
        padding-top:30px;
        padding-left:75px;
        padding-right:50px;
    }
}

.volunteer-image-holder {

    padding-top:$gutter;
    padding-bottom:$gutter;
    padding-left:($gutter * 2);
    padding-right:($gutter * 2);

    @include at-query($min, $xlarge) {
        padding-top:30px;
        padding-bottom:30px;
        padding-left:65px;
        padding-right:65px;
    }

    @include at-query($max, $small) {
        padding-top:0px;
        padding-left: $gutter;
        padding-right: $gutter;
        padding-bottom:0px;
    }
}