.about-carousel {

    .carousel-copy {

        display:table;
        background-color:$black;
        color:$white;
        position: relative;
        width:100%;
        padding-left:10%;
        padding-right:10%;
        padding-top:20px;
        padding-bottom:20px;
        left:0;
        top:0;
        text-align:center;
        height:90px;
        line-height:1.2em;

        span {
            display: table-cell;
            vertical-align: middle;
        }

        p {
            padding-left:30px;
            padding-right:30px;
            margin-bottom:0px;
            font-size:em(18px);
        }

        .arrow-left {
            margin-top:10px;
            float:left;
        }

        .arrow-right {
            margin-top:10px;
            float:right;
        }

        @include at-query ($max, $small) {
            padding-top:10px;
            padding-bottom:10px;
            line-height:1.1em;

            p {
                font-size:em(14px);
            }

            .arrow-left {
                margin-top:24px;
            }

            .arrow-right {
                margin-top:24px;
            }
        }
    }
}

.about-carousel {
    .owl-theme .owl-controls{
        @include at-query ($max, $small) {
            bottom:90px;
        }
    }
}

.volunteer-content-holder {
    margin-top:50px;
    margin-bottom:20px;
    padding-top:($gutter * 2);
    padding-bottom:$gutter;
    margin-left:0px;
    background-color: $white;
    @include clearfix;

    @include at-query($min, $xlarge) {
        padding-top:50px;
    }

    @include at-query($max, $small) {
        margin-top:0px;
    }
}

.volunteer-content {
    padding-top:$gutter;
    padding-left:$gutter;
    padding-right:$gutter;

    @include at-query($min, $xlarge) {
        padding-top:30px;
        padding-left:75px;
        padding-right:50px;
    }
}

.volunteer-image-holder {

    padding-top:$gutter;
    padding-bottom:$gutter;
    padding-left:$gutter;
    padding-right:($gutter * 2);

    @include at-query($min, $xlarge) {
        padding-top:30px;
        padding-left:55px;
        padding-right:55px;
    }

    @include at-query($max, $small) {
        padding-top:0px;
        padding-left: 0px;
        padding-right: $gutter;
        padding-bottom:0px;
    }

}

.volunteer-carousel {

    .carousel-item {
        background-color:$white;
    }

    .carousel-copy {
        display:table;
        position: relative;
        margin-top:18px;
        padding-bottom:0px;
        top:0px;
        left:0px;
        width:100%;

        span {
            position:relative;
            top:-10px;
            display:table-cell;
            width:70%;
            margin: 0 auto;
        }

        h2 {
            text-transform: none;
            font-size:em(24px);
            margin-bottom:0px;
            padding-bottom:4px;
        }

        p {
            line-height:1.3em;
        }

        .arrow-left {
            margin-left:($gutter / 2);
            float:left;
        }

        .arrow-right {
            float:right;
            margin-right:($gutter / 2);
        }

        @include at-query ($max, $small) {
            padding-top:0px;
            padding-left:10px;
            padding-right:10px;
            height:auto;

            p {
                font-size:em(16px);
                line-height:em(18px);
                margin-bottom:10px;
            }

            .arrow-left {
                margin-left:0;
            }

            .arrow-right {
                margin-right:0px
            }

            padding-bottom:0px;
        }
    }
}

#terms-and-conditions {
    h3 {
        margin-top:30px;
    }
}