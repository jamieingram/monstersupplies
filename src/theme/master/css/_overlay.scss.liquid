.noscroll {
    overflow: hidden;
}

.border-left {
    border-left: 2px solid #7f7f7f;
    @include at-query ($max, $medium) {
        border-left:none;
    }
}

.modal-window {
    z-index:200;
    position:fixed;
    display:none;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color: #131313;
    overflow-y: scroll;
    
    .modal-content {
        position:relative;
        background-color:#FFF;
        width:80%;
        margin-left:10%;
        margin-right:10%;
        margin-top:5%;
        margin-bottom:5%;

        .overlay-close-button {
            position:absolute;
            cursor:pointer;
            width:21px;
            height:21px;
            top:$gutter;
            right:$gutter;
            background: url('{{ "close-button.png" | asset_url }}') top left no-repeat;

            @include at-query ($max, $small) {
                margin-top:0px;
                margin-right:0px;
            }

            &.close-button-red {
                background: url('{{ "close-button-red.png" | asset_url }}') top left no-repeat;
            }
        }

        .modal-content-inner {
            padding:$gutter;
        }

        @include at-query ($max, $small) {
            width:100%;
            margin:0;
        }
    }

    &.is-open {
        display:block;
    }

    label, legend {
        font-size:em(18px);
        font-weight:normal;
        display:inline-block;
    }

    input[type="text"] {
        display:inline-block;
        margin:0 0 22px;
        border:none;
        outline:none;
        width:280px;
        height:40px;
        background-color:#dbe0d9;
    }

    input[type="text"]:focus{
        border:none;
        outline: none;
    }

    .form-input {
        @include at-query ($max, $small) {
            text-align:left;
        }
    }
}

.newsletter-overlay {

    .modal-content {
        text-align:center;
        padding:36px;
        
        .newsletter-form-content {
            max-width:800px;
            margin: 0 auto;

            h2 {
                padding-bottom:0px;
            }
            p {
                padding-left:24px;
                padding-right:24px;
                font-size:em(18px);
                line-height:1.3em;
                margin-bottom:$gutter;
            }

            label {
                width:100px;
                text-align:right;
                margin-right:12px;

                &.checkbox-label {
                    width:auto;
                    text-align:left;
                }

                @include at-query ($max, $small) {
                    text-align:left;
                    margin-right:0px;
                }
            }

            ul {
                display:inline-block;
                text-align:left;
            }

            .top-align {
                vertical-align: top;
            }

            .form-input {
                ul {
                    width:280px;
                }

                button {
                    margin-right: 86px;
                }
            }

            @include at-query ($max, $small) {
                h2 {
                    font-size:em(28px);
                }

                p {
                    padding-left:0px;
                    padding-right:0px;
                    font-size:em(16px);
                }

                label {
                    font-size:em(16px);
                }
            }
        }

        @include at-query ($max, $small) {
            padding:18px;
        }
    }
}

.delivery-overlay {

    .modal-content {
        .overlay-close-button {
            margin-top:0px;
            margin-right:0px;
        }

        h2 {
            font-size:em(24px);
        }

        .delivery-content-inner {
            margin-top:36px;

            .grid-item {
                padding-left:36px;
                padding-right:36px;
            }
        }
    }
}

.mos-overlay {

    .grid-item {
        margin-bottom:0px;
    }

    .mos-modal-content {
         
        .overlay-close-button {
            @include at-query ($max, $large) {
                margin-bottom:24px;
            }
        }

         img {
            display:block;
         }

         .mos-logo {
            width:100%;
            height:ceil(164px * 0.7);
            background: url('{{ "mos-logo-red.png" | asset_url }}') top center no-repeat;
            background-size: (232px * 0.7) (164px * 0.7);
            text-indent: 100%;
            white-space: nowrap;
            overflow: hidden;
            margin-top:24px;
            margin-bottom:36px;

            @include at-query ($min, $xlarge) {
                height:164px;
                background-size: 232px 164px;
            }
         }

         p {
            font-size:em(18px);
            line-height:em(16px);
            font-style: italic;
            margin-bottom:30px;

            @include at-query ($min, $xlarge) {
                font-size:em(20px);
                line-height:em(18px);
            }
         }
    }
}