/*============================================================================
  #Site Header
  ==============================================================================*/
.site-header {
  padding: $gutter/2 0;

  @include at-query ($min, $large) {
    padding: $gutter 0;
  }

  @include at-query ($min, $large) {
    .grid {
      display: table;
      width: 100%;

      & > .grid-item {
        float: none;
        display: table-cell;
        vertical-align: middle;
      }
    }
  }
}

.header-logo {
  width:430px;
  height:118px;
  position: relative;
  text-align: center;
  margin: 0 auto 20px auto;

  @include at-query ($max, $small) {
    width:(430px * 0.8);
    height:(118px * 0.8);
    margin-bottom:10px;
  }

  a,
  a:hover,
  a:focus,
  a:link,
  a:visited {
    background: url('{{ "logo.png" | asset_url }}') top left no-repeat;
    background-size: 430px 118px;
    
    @include at-query ($max, $small) {
      background-size: (430px * 0.8) (118px * 0.8);
    }

    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    font: 0/0 a;
    color: transparent;
    text-shadow: none;
    background-color: transparent;
    border: 0;
    text-indent: 200%;
    overflow: hidden;
  }
}

.site-header--text-links {
  margin-bottom: 0;
}

.search-bar {
  max-width: 100%;

  @include at-query ($max, $medium) {
    margin: 0 auto;
  }
}

.header-links {
  position: absolute;
  top:0px;
  right:0px;
  margin-top:-30px;

  @include at-query ($max, $small) {
    display:none;
  }
}

.translation-bar {
  width:100%;
  height:45px;
  background-color: #2f2f2f;
  text-align:center;
  p {
    padding:6px;
    color: #FFF;
  }
}

/*============================================================================
  #Site Nav and Dropdowns
  ==============================================================================*/

.menu {
  margin-bottom:$gutter;
}

.navigation ul li a {
  text-decoration: none;
}

.navigation {
  text-transform: uppercase;
  text-align:center;
  position:relative;
  z-index:100;
}

.nav-item {
  display:inline-block;
  margin-bottom:2px;
  margin-left:10px;
  margin-right:10px;
  padding:3px;
  font-size:1em;
}

.nav-item-first {
  margin-left: 0px;
}

.nav-item-last {
  margin-right: 0px;
}

.nav-item a {
  color: $colorPrimary;
}

.mobile-nav {
  height:45px;
  display:none;

  .mobile-nav-item {
    height:45px;
    display:inline-block;
    margin-bottom:0px;
    padding-left: 0px;
    padding-top: 8px;
    font-size:em(18px);
  }
}

.nav-divider {
  margin-left: 10px;
  margin-right: 10px;
}

@include at-query ($max, $medium) {
  .nav-item {
    margin-left:6px;
    margin-right:6px;
    font-size:em(16px);
  }

  .nav-divider {
    margin-left: 6px;
    margin-right: 6px;
  }
}

@include at-query ($max, $small) {


  .menu {
    padding-top: 15px;
    background-color: $black;
    display:none;
  }

  .navigation ul {
    margin:0;
  }

  .mobile-nav {
    display:block;
  }

  .is-open {
    display: block;
  }

  .nav-item {
    font-size:em(18px);
    height:50px;
    padding-top:10px;
    display:block;

    a {
      color: $white;
      padding:14px;
    }

    a:hover,
    a:focus {
      color: $white;
    }
  }

  .nav-divider {
    display:none;
  }
}

/*================ Search bar in header ================*/
.nav-search {
  width:150px;
  position: relative;
  padding: 7px 0;

  @include at-query ($max, $medium) {
    padding: 0 0 $gutter/2;
    margin: 0 auto;
    text-align: center;
  }

  .input-group,
  .input-group-field {
    margin-bottom: 0;
  }
}

/*================ Basket link ===================*/
a.basket-link {
  text-decoration: none;
  text-transform: uppercase;
  font-size: em(12px);

  @include at-query ($max, $small) {
    font-size:1em;
  }
}

