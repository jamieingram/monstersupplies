/*============================================================================
  #Site Header
  ==============================================================================*/
.site-header {
  padding: $gutter/2 0;

  @include at-query ($min, $large) {
    padding: $gutter 0;
  }

  @include at-query ($min, $large) {
    .grid {
      display: table;
      width: 100%;

      & > .grid-item {
        float: none;
        display: table-cell;
        vertical-align: middle;
      }
    }
  }
}

.header-logo {
  width:430px;
  height:118px;
  position: relative;
  text-align: center;
  margin: 0 auto 20px auto;

  @include at-query ($max, $small) {
    width:(430px * 0.7);
    height:(118px * 0.7);
    margin-bottom:10px;
  }

  a,
  a:hover,
  a:focus,
  a:link,
  a:visited {
    background: url('{{ "logo.png" | asset_url }}') top left no-repeat;
    background-size: 430px 118px;
    
    @include at-query ($max, $small) {
      background-size: (430px * 0.7) (118px * 0.7);
    }

    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    font: 0/0 a;
    color: transparent;
    text-shadow: none;
    background-color: transparent;
    border: 0;
    text-indent: 200%;
    overflow: hidden;

    &.mummy {
      background: url('{{ "logo_mummy.png" | asset_url }}') top left no-repeat;
      background-size: 430px 118px;

      @include at-query ($max, $small) {
        background-size: (430px * 0.7) (118px * 0.7);
      }
    }

    &.werewolf {
      background: url('{{ "logo_werewolf.png" | asset_url }}') top left no-repeat;
      background-size: 430px 118px;

      @include at-query ($max, $small) {
        background-size: (430px * 0.7) (118px * 0.7);
      }
    }

    &.zombie {
      background: url('{{ "logo_zombie.png" | asset_url }}') top left no-repeat;
      background-size: 430px 118px;

      @include at-query ($max, $small) {
        background-size: (430px * 0.7) (118px * 0.7);
      }
    }
  }
}

.site-header--text-links {
  margin-bottom: 0;
}

.search-bar {
  max-width: 100%;
  border-bottom: 2px dotted #000;

  @include at-query ($max, $medium) {
    margin: 0 auto;
  }
}

.header-links {
  position: absolute;
  top:0px;
  right:0px;
  text-align: right;
  margin-top:-40px;

  @include at-query ($max, $small) {
    display:none;
  }
}

.translation-bar {
  font-family: $headerFontStack;
  width:100%;
  min-height:45px;
  background-color: $black;
  text-align:center;
  color: #FFF;
  padding:10px;
  font-size:em(15px);
  line-height:25px;

  .selected-language {
    font-style: italic;
    font-weight: 700;
  }
  
  .translation-options {

    ul {
      margin-top:12px;
    }
    a {
      color:$white;
      text-transform: uppercase;
      text-decoration: none;
    }
    display:none;
  }

  .is-open {
    display:block;
  }

  .burger-trigger {
    display:inline-block;
    width:11px;
    height:12px;
    background-image: url({{ 'burger.png' | asset_url }});
    background-repeat: no-repeat;
    margin-left:($gutter / 2);
    cursor: pointer;
  }

  @include at-query ($max, $small) {
    min-height:42px;
    padding:8px;
  }
}

/*============================================================================
  #Site Nav and Dropdowns
  ==============================================================================*/

.menu {
  margin-bottom:$gutter;
}

.mobile-search-form {
  display:none;
}

.navigation ul li a {
  text-decoration: none;
}

.navigation {
  text-transform: uppercase;
  text-align:center;
  position:relative;
  z-index:100;
}

.nav-item {
  display:inline-block;
  margin-bottom:2px;
  margin-left:10px;
  margin-right:10px;
  padding:3px;
  font-size:1em;
  font-weight:600;
}

.nav-item-first {
  margin-left: 0px;
}

.nav-item-last {
  margin-right: 0px;
}

.nav-item a {
  color: $colorPrimary;
}

.mobile-nav {
  height:45px;
  display:none;

  .mobile-nav-item {
    height:45px;
    display:inline-block;
    margin-bottom:0px;
    padding-left: 0px;
    padding-top: 8px;
    font-size:em(18px);
  }
}

.nav-divider {
  display:inline-block;
  height:12px;
  margin-left: 10px;
  margin-right: 12px;
  border-right: 2px solid $black;
  font-size:em(12px);
}

@include at-query ($max, $medium) {
  .nav-item {
    margin-left:6px;
    margin-right:6px;
    font-size:em(16px);
  }

  .nav-divider {
    font-size:em(10px);
    margin-left: 6px;
    margin-right: 8px;
    border-right: 2px solid $black;
  }
}

@include at-query ($max, $small) {


  .menu {
    padding-top: 15px;
    padding-bottom: 15px;
    background-color: $black;
    display:none;
  }

  .mobile-search-form {
    background-color: $black;
    padding-top:30px;
    padding-bottom:30px;
    padding-left:60px;
    padding-right:60px;
    display:none;

    .input-group-field {
      height:56px;
    }

    input[type="submit"] {
      height:56px;
      background-color: $grey;
      color: $black;
      padding-left: 14px;
      padding-right: 14px;
    }
  }

  .navigation ul {
    margin:0;
  }

  .mobile-nav {
    display:block;
  }

  .is-open {
    display: block;
  }

  .is-selected {
    background-color:$grey;
  }

  .nav-item {
    font-size:em(18px);
    height:50px;
    padding-top:10px;
    display:block;

    a {
      color: $white;
      padding:14px;
    }

    a:hover,
    a:focus {
      color: $white;
    }
  }

  .nav-divider {
    display:block;
    width:100%;
    height:6px;
    left:0px;
    border-right: 0px;
    margin:0;
    margin-bottom:10px;
    padding:0;
    border-bottom:2px solid $darkGrey;
  }
}

/*================ Search bar in header ================*/
.nav-search {
  text-transform: uppercase;
  font-size:em(12px);
  width:151px;
  position: relative;
  padding: 7px 0;

  input[type="text"] {
    border:none;
    padding-bottom:0;
    outline:none;
    background: transparent;
  }

  input[type="text"]:focus{
    border:none;
    outline: none;
  }

  @include at-query ($max, $medium) {
    padding: 0 0 $gutter/2;
    margin: 0 auto;
    text-align: center;
  }

  .input-group,
  .input-group-field {
    margin-bottom: 0;
  }

  .search-btn {
    width:15px;
    height:12px;
    max-width:15px;
    padding:0;
    margin:0;
    margin-top:15px;
  }
}

/*================ Basket link ===================*/
a.basket-link {
  text-decoration: none;
  text-transform: uppercase;
  font-size: em(14px);

  @include at-query ($max, $small) {
    font-size:1em;
  }
}

