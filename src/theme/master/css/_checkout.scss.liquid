body {
  background-color: $colorBody;
}

.header {
  background-color: $colorBody;
}

.shop {
  float: none;
  text-align: center;
}

.shop__name {

  width:430px;
  height:118px;
  position: relative !important;
  text-align: center;
  margin: 0 auto 20px auto;

  @include at-query ($max, $small) {
    width:(430px * 0.7);
    height:(118px * 0.7);
    margin-bottom:10px;
  }

  background: url('{{ "logo.png" | asset_url }}') top left no-repeat;
  background-size: 430px 118px;
  
  @include at-query ($max, $small) {
    background-size: (430px * 0.7) (118px * 0.7);
  }

  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  font: 0/0 a;
  color: transparent;
  text-shadow: none;
  background-color: transparent;
  border: 0;
  text-indent: 200%;
  overflow: hidden;
}