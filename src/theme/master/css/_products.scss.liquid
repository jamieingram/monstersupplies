/*============================================================================
  #Product Grid and List Views
==============================================================================*/
.sold-out {

}

.on-sale {

}

.product-list-image {
  display: block;
  float: left;
  margin-right: $gutter;
  margin-bottom: $gutter;
  max-width: 40%;
}

.product-grid-image {
  display: block;
  margin: 0 auto;

  img {
    display: block;
    margin: 0 auto;
  }
}

.product-grid-item {
  .product-grid-detail {
    text-align:center;
    margin-top:($gutter/2);
  }

  .product-title {
    display:inline-block;
    font-family: $headerFontStack;
    font-weight: $headerFontWeight;
    font-size: 0.9em;
    text-transform: uppercase;
    line-height:1.2em;
  }

  a {
    text-decoration: none;
  }
}


/*============================================================================
  #Product Page
==============================================================================*/
.top-line {
  padding-top:30px;
  border-top:1px solid grey;
}

.postage-promo-banner {
  height:30px;
  font-size: em(16px);
  text-align: center;
  color:$white;
  text-transform: uppercase;
  padding-top:3px;
  background-color: $darkGreen;
  margin-bottom:40px;
}

.carousel-holder {
  position:relative;

  @include at-query ($max, $large) {
    margin-bottom: $gutter;
  }
}

.carousel-navigation {
  position:absolute;
  z-index:10;
  padding-left:$gutter;
  padding-right:$gutter;
  width:100%;
  top:37.5%;

  .arrow-left {
    float:left;
  }

  .arrow-right {
    float:right;
  }
}

.product-carousel {
  .carousel-item {
    background-color: $colorBody;
  }
}
.product-thumbs {
  background-color: #bababa;
  text-align: center;
  padding-top:20px;
  padding-bottom:16px;

  @include at-query ($max, $large) {
    display:none;
  }
}

.product-thumb {
  cursor: pointer;
  width:50px;
  margin-left:3px;
  margin-right:3px;
  display:inline-block;

  @include at-query ($min, $small) {
    width:80px;
    margin-left:5px;
    margin-right:5px;
  }

  @include at-query ($min, $medium) {
    width:60px;
    margin-left:3px;
    margin-right:3px;
  }

  @include at-query ($min, $xlarge) {
    width:100px;
    margin-left:6px;
    margin-right:6px;
  }
}

.product-variants {
  display: none;

  .no-js & {
    display: block;
  }
}

.product-photo-container {
  margin-bottom: $gutter;
}

.product-photo-container,
.product-photo-thumbs {
  a, img {
    display: block;
    margin: 0 auto;
  }

  li {
    margin-bottom: $gutter;
  }
}

.product-detail {
  padding-left:$gutter;
  h2 {
    line-height:0.7em;
    padding-bottom:$gutter;
  }

  @include at-query($max, $large) {
    padding-right: 24px;
  }
}

.product-offer {
  color:#FFF;
  background-color:$darkGreen;
  height: 30px;
  text-align: center;
  font-weight: 700;
  text-transform: uppercase;
  padding-top:2px;
}

.product-price {
  @include clearfix;
  background: url('{{ "mos_logo.png" | asset_url }}') 94% center no-repeat;
  background-size: 65px 65px;
  background-color:$white;
  margin-bottom:34px;
  padding-bottom:($gutter * 0.5);
}

.product-price-amount {
  vertical-align:middle;
  padding-left:$gutter;
  margin-top:0.8em;
  width:30%;
  float:left;
  font-size:em(40px);
}

.price-text {
  width:40%;
  float:left;
  text-align:center;
  line-height:1.3em;
  margin-top:$gutter;
}

.collection-items {
  h3 {
    font-size:em(26px);
    margin-bottom: 0.7em;
  }

  .product-grid-item {
    .product-grid-detail {
      margin-top: 4px;
      line-height:1.2em;
    }
  }

  margin-bottom:$gutter;
}

.other-products {
  h3 {
    font-size:em(26px);
    margin-bottom: 0.7em;
  }
  .product-grid-item {
    .product-grid-detail {
      font-size:em(18px);
      margin-top: 4px;
      line-height:1.2em;
    }
  }
}

.product-description {
  background-color:$white;
  font-size:em(18px);
  padding-top:30px;
  padding-left:(2 * $gutter);
  padding-right:(2 * $gutter);
  padding-bottom:$gutter;
}

.product-notes {
  border-top: 1px dashed grey;
  background-color:#fffff0;
  text-align: center;

  .product-notes-content {
    width:50%;
    display:inline-block;
    padding-top:16px;
  }

  h3 {
    font-size:em(10px);
    text-transform: uppercase;
  }

  p {
    text-align: left;
    font-size:em(14px);
  }

  .product-more-info {
    min-height:30px;
    overflow:hidden;
    cursor:pointer;
    background: url('{{ "arrow-down.png" | asset_url }}') 96% top no-repeat;

    &.is-open {
      background: url('{{ "arrow-up.png" | asset_url }}') 96% top no-repeat;
    }

    h3 {
      height:30px;
      font-size:em(14px);
      text-transform: uppercase;
      border: 1px solid black;
      padding: 7px;
      line-height: 1.0em;
      text-align:left;
    }

    p {
      margin-top:-100px;
    }

    margin-bottom:20px;
  }
  margin-bottom:38px;
}

.product-quote {
  padding-left: 48px;
  padding-right: 48px;
  padding-top: 30px;
  padding-bottom:28px;
  background-color:$black;
  color:#FFF;
  .quote-text {
    font-size:em(30px);
    line-height:1.2em;
    margin-bottom:18px;
  }

  .quote-author {
    font-size:em(16px);
  }
}

.quantity-elements {
  @include clearfix;
  display: inline-block;
  margin-right:$gutter;

  input[type="text"] {
    float:left;
    display:inline-block;
    padding:0px;
    margin:0px;
    height:34px;
    width: 34px;
    text-align:center;
    border:none;
    outline:none;
    background: transparent;
  }

  input[type="text"]:focus{
    border:none;
    outline: none;
  }

  .subtract-product {
    cursor:pointer;
    float:left;
    display:inline-block;
    width:34px;
    height:34px;
    background: url('{{ "minus.png" | asset_url }}') left top no-repeat;
  }

  .add-product {
    cursor:pointer;
    float:left;
    display:inline-block;
    width:34px;
    height:34px;
    background: url('{{ "plus.png" | asset_url }}') left top no-repeat;
    margin-right:$gutter;
  }

  .button-add {
    float:left;
  }
}

.delivery-info {
  font-size:em(18px);
  margin-bottom:$gutter;
}

.product-share {
  .facebook-button {
    margin-left:0px;
  }
}