/*============================================================================
  #Product Grid and List Views
==============================================================================*/
.sold-out {

}

.on-sale {

}

.product-list-image {
  display: block;
  float: left;
  margin-right: $gutter;
  margin-bottom: $gutter;
  max-width: 40%;
}

.product-grid-image {
  display: block;
  margin: 0 auto;

  img {
    display: block;
    margin: 0 auto;
  }
}

.product-grid-item {
  .product-detail {
    text-align:center;
    margin-top:($gutter/2);
  }

  .product-title {
    font-family: $headerFontStack;
    font-weight: $headerFontWeight;
    font-size: 0.9em;
    text-transform: uppercase;
  }

  a {
    text-decoration: none;
  }
}


/*============================================================================
  #Product Page
==============================================================================*/
.product-variants {
  display: none;

  .no-js & {
    display: block;
  }
}

.product-photo-container {
  margin-bottom: $gutter;
}

.product-photo-container,
.product-photo-thumbs {
  a, img {
    display: block;
    margin: 0 auto;
  }

  li {
    margin-bottom: $gutter;
  }
}
