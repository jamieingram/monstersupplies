/*============================================================================
  #Product Grid and List Views
==============================================================================*/
.sold-out {

}

.on-sale {

}

.product-list-image {
  display: block;
  float: left;
  margin-right: $gutter;
  margin-bottom: $gutter;
  max-width: 40%;
}

.product-grid-image {
  position:relative;
  display: block;
  margin: 0 auto;

  img {
    display: block;
    margin: 0 auto;
  }
}

.product-grid-item {
  .product-grid-detail {
    text-align:center;
    margin-top:($gutter/2);
  }

  .product-title {
    display:inline-block;
    font-family: $headerFontStack;
    font-weight: $headerFontWeight;
    font-size: 0.9em;
    text-transform: uppercase;
    line-height:1.2em;
  }

  a {
    text-decoration: none;
  }
}

.product-selected {
  border: 4px solid $white;
}


/*============================================================================
  #Product Page
==============================================================================*/
.top-line {
  padding-top:30px;
  border-top:1px solid grey;

  @include at-query ($max, $medium) {
    border-top:none;
    padding-top:0px;
  }
}

.postage-promo-banner {
  height:30px;
  font-size: em(16px);
  text-align: center;
  color:$white;
  text-transform: uppercase;
  padding-top:3px;
  background-color: $darkGreen;
  margin-bottom:40px;
}

.carousel-holder {
  position:relative;

  @include at-query ($max, $large) {
    margin-bottom: $gutter;
  }
}

.carousel-navigation {
  position:absolute;
  z-index:10;
  padding-left:$gutter;
  padding-right:$gutter;
  width:100%;
  top:48%;

  .arrow-left {
    float:left;
  }

  .arrow-right {
    float:right;
  }
}

.product-carousel {
  .carousel-item {
    background-color: $colorBody;
  }
}
.product-thumbs {
  background-color: #bababa;
  text-align: center;
  padding-top:20px;
  padding-bottom:16px;

  @include at-query ($max, $large) {
    display:none;
  }
}

.product-thumb {
  cursor: pointer;
  width:50px;
  margin-left:3px;
  margin-right:3px;
  display:inline-block;

  @include at-query ($min, $small) {
    width:80px;
    margin-left:5px;
    margin-right:5px;
  }

  @include at-query ($min, $medium) {
    width:60px;
    margin-left:3px;
    margin-right:3px;
  }

  @include at-query ($min, $xlarge) {
    width:100px;
    margin-left:6px;
    margin-right:6px;
  }
}

.product-variants {
  display: none;

  .no-js & {
    display: block;
  }
}

.product-photo-container {
  margin-bottom: $gutter;
}

.product-photo-container,
.product-photo-thumbs {
  a, img {
    display: block;
    margin: 0 auto;
  }

  li {
    margin-bottom: $gutter;
  }
}

.product-detail {
  padding-left:$gutter;
  h2 {
    line-height:0.7em;
    @include at-query($max, $small) {
      line-height:1em;
    }
  }

  @include at-query($min, $large) {
    padding-right: 24px;

    h2 {
      font-size:em(26px);
    }
  }

  .social {
    border-bottom:none;
  }
}

.product-offer {
  color:#FFF;
  background-color:$darkGreen;
  height: 30px;
  text-align: center;
  font-weight: 700;
  text-transform: uppercase;
  padding-top:2px;
  margin-bottom:30px;

  @include at-query($min, $large) {
    margin-left:$gutter;
  }
}

.ministry-profit-message {
  background: url('{{ "mos_logo.png" | asset_url }}') $gutter center no-repeat;
  background-size: 65px 65px;
  background-color:$white;
  margin-bottom:34px;

  .profit-text {
    padding-left:65px + (2 * $gutter);
    padding-right:$gutter;
    padding-top:30px;
    padding-bottom:30px;
    line-height:1.3em;
    margin-top:$gutter;

    @include at-query($max, $small) {
      padding-top:20px;
      padding-bottom:20px;
    }
  }

  @include at-query($max, $large) {
    margin-left:-$gutter;
  }
}

.product-price-amount {
  margin-right:$gutter;
  margin-bottom:0px;
  float:left;
  font-size:em(40px);
  line-height:0.8em;
}

.product-description {
  font-size:em(20px);
  margin-bottom:$gutter;

  @include at-query($max, $small) {
    font-size:em(16px);
    margin-right: 24px;
  }
}

.collection-items {
  h3 {
    font-size:em(26px);
    margin-bottom: 0.7em;
  }

  .product-grid-item {
    .product-grid-detail {
      margin-top: 4px;
      line-height:1.2em;
    }
  }
  
  margin-bottom:$gutter;

  @include at-query($max, $medium) {
    margin-left:$gutter;
    margin-right:$gutter;
  }

  
}

.product-notes {
  
  background-color: #FFF;
  padding-top:30px;
  padding-left:($gutter * 2);
  padding-bottom:($gutter * 2);
  padding-right:$gutter;

  h3 {
    font-size:em(26px);
    text-transform: uppercase;
  }

  p {
    font-size:em(18px);
    line-height:1.35em;
  }

  .product-more-info {
    
    padding-top:$gutter;

    h3 {
      font-size:em(14px);
      text-transform: uppercase;
      line-height: 0.6em;
      text-align:left;
    }

    p {
      font-size:em(14px);
      margin-bottom:20px;
    }

    margin-bottom:20px;
  }

  @include at-query($max, $small) {
     p {
      font-size:em(16px);
    }
  }
  @include at-query($min, $small) {
    margin-bottom:38px;
  }

  @include at-query($max, $large) {
    padding-left:$gutter;
  }
}

.product-quote {
  padding-left: 48px;
  padding-right: 48px;
  padding-top: 30px;
  padding-bottom:28px;
  background-color:$black;
  color:#FFF;
  .quote-text {
    font-size:em(30px);
    line-height:1.2em;
    margin-bottom:18px;
    @include at-query($max, $small) {
      font-size:em(22px);
    }
  }

  .quote-author {
    font-size:em(16px);
  }
}

.price-quantity-elements {
  @include clearfix;
  display: inline-block;
  margin-right:$gutter;

  .subtract-product {
    cursor:pointer;
    float:left;
    display:inline-block;
    width:34px;
    height:34px;
    background: url('{{ "minus.png" | asset_url }}') left top no-repeat;
    
    @include at-query($max, $small) {
      margin-bottom:$gutter;
    }
  }

  .add-product {
    cursor:pointer;
    float:left;
    display:inline-block;
    width:34px;
    height:34px;
    background: url('{{ "plus.png" | asset_url }}') left top no-repeat;
    margin-right:$gutter;
  }

  .button-add {
    float:left;
    @include at-query($max, $small) {
      clear:both;
    }
  }
}

.delivery-info {
  font-size:em(18px);
  @include at-query($max, $small) {
    font-size:em(14px);
  }
} 

.product-share {
  .facebook-button {
    margin-left:0px;
  }
}

.roundel {
  position: absolute;
  z-index:1;
  color:#FFF;
  background-color:$darkGreen;
  text-align:center;
  text-transform: uppercase;

  @include at-query ($max, $small) {
    margin:14px;
    width:46px;
    height:46px;
    line-height:46px;
    font-size:em(14px);

    -moz-border-radius: 23px; 
    -webkit-border-radius: 23px; 
    border-radius: 23px;
  }

  @include at-query ($min, $small) {
    margin:18px;
    width:60px;
    height:60px;
    line-height:60px;
    font-size:em(18px);

    -moz-border-radius: 30px; 
    -webkit-border-radius: 30px; 
    border-radius: 30px;
  }
}

.stripe-holder {
  position:absolute;
  top:0px;
  clip: rect(0px, 100px, 100px, 0px);

  .stripe {
    position: absolute;
    z-index:1;
    color:#FFF;
    background-color:$darkGreen;
    text-align:center;
    text-transform: uppercase;
    @include rotate(-45deg);

    top:22px;
    left:-22px;
    width:110px;
    height:20px;
    font-size:em(12px);
  }
}

.sold-out-message {
  margin-top:12px;
  font-size:em(14px);
  font-weight: 600;

  a {
    margin-bottom:6px;
  }
}

/*=================== Ajax behaviour =====================*/
.ajaxified-cart-feedback {
  /* Below add to cart button */
  /* display: block; */
  display: inline;
  margin-top:12px;
  line-height: 36px;
  vertical-align: middle;

  @include at-query($max, $small) {
    line-height: 20px;
    margin-bottom:0px;
  }
}

.ajaxified-cart-feedback.success { color: $darkGreen; }
.ajaxified-cart-feedback.error { color: $red; }