{% include 'product-meta' %}

<div class="grid-item no-bottom-margin product-grid-item large--one-third medium--one-half small--one-half{% if sold_out %} sold-out{% endif %}{% if on_sale %} on-sale{% endif %}">

  <a href="{{ product.url | within: collection }}" class="product-grid-image">
    {% if is_new %}
    <div class="roundel secondary-font">NEW</div>
    {% endif %}
    <img class="{% if has_rollover == "true" %}js-image-rollover{% endif %}" src="{{ product.featured_image.src | product_img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" {% if has_rollover == "true" %}data-rollover-url="{{ thumbnail_url }}"{% endif %}>
    
    {% if sold_out %}
      <div class="stripe-holder"><div class="stripe secondary-font">Sold Out</div></div>
    {% endif %}
  </a>
  <div class="product-grid-detail">
    <a class="product-title" href="{{ product.url | within: collection }}">{{ product.title }}</a>
    <p>
       <span>
       {% if product.price_varies %}From{% endif %}
        {{ product.price | money }}
      </span>
    </p>
  </div>

</div>