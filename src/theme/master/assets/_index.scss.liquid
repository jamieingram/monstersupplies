/*============================================================================
  #Site Header
==============================================================================*/
.site-header {
  padding: $gutter/2 0;

  @include at-query ($min, $large) {
    padding: $gutter 0;
  }

  @include at-query ($min, $large) {
    .grid {
      display: table;
      width: 100%;

      & > .grid-item {
        float: none;
        display: table-cell;
        vertical-align: middle;
      }
    }
  }
}

.header-logo {
  width:430px;
  height:125px;
  position: relative;
  text-align: center;
  margin: 0 auto $gutter/2 auto;

  @include at-query ($max, $small) {
     width:(430px * 0.8);
      height:(125px * 0.8);
  }

  @include at-query ($min, $large) {
    margin-bottom: 0;
  }

  a,
  a:hover,
  a:focus,
  a:link,
  a:visited {
    background: url('{{ "logo.png" | asset_url }}') top left no-repeat;
    background-size: 430px 125px;
    
    @include at-query ($max, $small) {
      background-size: (430px * 0.8) (125px * 0.8);
    }

    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    font: 0/0 a;
    color: transparent;
    text-shadow: none;
    background-color: transparent;
    border: 0;
    text-indent: 200%;
    overflow: hidden;
  }

}

.site-header--text-links {
  margin-bottom: 0;
}

.search-bar {
  max-width: 100%;

  @include at-query ($max, $medium) {
    margin: 0 auto;
  }
}

.header-links {
  position: absolute;
  top:($gutter * 2);
  right:$gutter;
}

.translation-bar {
  width:100%;
  height:42px;
  background-color: #2f2f2f;
  text-align:center;
  p {
    padding:10px;
    color: #FFF;
  }
}

/*============================================================================
  #Site Nav and Dropdowns
==============================================================================*/
.menu {
    text-transform: uppercase;
    text-align:center;
}

.menu ul {
    padding:0;
    margin:0;
}

.nav-item {
    display:inline-block;
    margin-bottom:10px;
    margin-left:2px;
    margin-right:2px;
    padding:3px;
    font-size:14px;
}

.nav-item a {
    text-decoration: none;
}

.nav-toggle {
    display:none;
}

@include at-query ($max, $small) {

    .menu {
        text-align:left;
        height:20px;
        overflow: hidden;
    }

    .is-open {
        overflow: visible;
    }

    .nav-toggle {
        display:block;
    }

    .nav-item {
        display:block;
    }

    .nav-divider {
        display:none;
    }
}

/*================ Search bar in header ================*/
.nav-search {
  width:150px;
  position: relative;
  padding: 7px 0;

  @include at-query ($max, $medium) {
    padding: 0 0 $gutter/2;
    margin: 0 auto;
    text-align: center;
  }

  .input-group,
  .input-group-field {
    margin-bottom: 0;
  }
}